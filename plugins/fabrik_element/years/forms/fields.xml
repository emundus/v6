<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">

		<fieldset name="plg-birthday-form"
		          label="PLG_ELEMENT_BIRTHDAY_FORM">

			<field
					type="helplink"
					url="PLG_ELEMENT_BIRTHDAY_HELP_SERVER"/>

			<field name="birthday_yearopt"
			       type="list"
			       default="number"
			       description="PLG_ELEMENT_BIRTHDAY_YEARLIST_OPT_DESC"
			       label="PLG_ELEMENT_BIRTHDAY_YEARLIST_OPT_LABEL">
				<option value="number">PLG_ELEMENT_BIRTHDAY_NUMBER_OF_YEARS</option>
				<option value="since">PLG_ELEMENT_BIRTHDAY_SINCE_YEAR</option>
			</field>

			<field name="birthday_yearstart"
			       type="text"
			       default="100"
			       class="input-mini"
			       description="PLG_ELEMENT_BIRTHDAY_YEARLIST_START_DESC"
			       label="PLG_ELEMENT_BIRTHDAY_YEARLIST_START_LABEL"
			       size="4"/>

			<field name="birthday_forward"
			       default="0"
			       class="input-mini"
			       description="PLG_ELEMENT_BIRTHDAY_YEARLIST_FORWARD_DESC"
			       label="PLG_ELEMENT_BIRTHDAY_YEARLIST_FORWARD_LABEL"
			       type="text"
			       size="4"/>
		</fieldset>

	</fields>
</form>
