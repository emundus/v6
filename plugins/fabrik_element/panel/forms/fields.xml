<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields>
		<fieldset name="plg-element-panel" label="COM_FABRIK_OPTIONS">

			<field type="helplink"
				url="PLG_ELEMENT_PANEL_HELP_SERVER" />

			<field name="eval"
				   type="radio"
				   default="1"
				   class="btn-group"
				   label="PLG_ELEMENT_PANEL_EVAL_LABEL">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="default"
				type="fabrikeditor"
				mode="php"
				label="PLG_ELEMENT_PANEL_DEFAULT_LABEL" />

		</fieldset>
	</fields>

	<fields name="params">
		<fieldset name="extra" label="COM_FABRIK_MORE">

			<field type="helplink"
				url="PLG_ELEMENT_PANEL_HELP_SERVER" />

			<field name="type"
				   type="list"
				   default="1"
				   label="PLG_ELEMENT_PANEL_TYPE_LABEL">
				<option value="0">PLG_ELEMENT_PANEL_TYPE_CUSTOM</option>
				<option value="1">PLG_ELEMENT_PANEL_TYPE_INFORMATION</option>
				<option value="2">PLG_ELEMENT_PANEL_TYPE_WARNING</option>
				<option value="3">PLG_ELEMENT_PANEL_TYPE_ERROR</option>
			</field>

			<field name="accordion"
				   type="radio"
				   default="0"
				   class="btn-group"
				   label="PLG_ELEMENT_PANEL_ACCORDION_LABEL">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="title"
				   type="text"
				   label="PLG_ELEMENT_PANEL_ACCORDION_TITLE_LABEL" />

			<field showon="type:0"
				   name="panel_background"
				   type="color"
				   default="#EBEEFA"
				   label="PLG_ELEMENT_PANEL_BACKGROUND">
			</field>

			<field showon="type:0"
				   name="panel_icon"
				   type="text"
				   default="info"
				   label="PLG_ELEMENT_PANEL_ICON">
			</field>

			<field showon="type:0"
				   name="panel_icon_color"
				   type="color"
				   default="#525b85"
				   label="PLG_ELEMENT_PANEL_ICON_COLOR">
			</field>

			<field showon="type:0"
				   name="panel_icon_type"
				   type="text"
				   default=""
				   label="PLG_ELEMENT_PANEL_ICON_TYPE"
				   description="PLG_ELEMENT_PANEL_ICON_TYPE_DESC">
			</field>

		</fieldset>
	</fields>
</form>
