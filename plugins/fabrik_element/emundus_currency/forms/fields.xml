<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset label="COM_FABRIK_OPTIONS" name="plg-element-emundus_currency">

			<field type="helplink"
				url="PLG_ELEMENT_FIELD_HELP_SERVER" />

			<field name="hidden"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_HIDDEN_DESC"
				label="PLG_ELEMENT_FIELD_HIDDEN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

		</fieldset>
	</fields>

	<fields name="params">
		<fieldset name="plg-element-emundus_currency-params" label="COM_FABRIK_ADVANCED">

			<field type="helplink"
				url="PLG_ELEMENT_FIELD_HELP_SERVER" />

			<field name="default_currency"
				   type="sql"
				   label="PLG_ELEMENT_CURRENCY_DEFAULT_CURRENCY"
				   query="SELECT *, CONCAT(name, ' (', symbol, ' ', iso3 ,')') as renderBack from currency"
				   key_field="iso3"
				   field_value="renderBack"
				   default="EUR"
				/>

			<field name="minimal_value"
				   type="number"
				   label="PLG_ELEMENT_CURRENCY_MINIMAL"
				   min="0.00"
				   max="params_maximal_value"
				   default="0.00"
				   step="0.01"
			   	/>

			<field name="maximal_value"
				   type="number"
				   label="PLG_ELEMENT_CURRENCY_MAXIMAL"
				   min="params_minimal_value"
				   max="999 999 999 999.99"
				   default="99 999 999.99"
				   step="0.01"
				/>

		</fieldset>
	</fields>
</form>
