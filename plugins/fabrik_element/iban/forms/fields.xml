            <field type="helplink"
                   url="PLG_ELEMENT_IBAN_HELP_SERVER"/>

            <field name="hidden"
                   type="radio"
                   default="0"
                   class="btn-group"
                   description="PLG_ELEMENT_IBAN_HIDDEN_DESC"
                   label="PLG_ELEMENT_IBAN_HIDDEN">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="default"
                   type="fabrikeditor"
                   mode="php"
                   label="PLG_ELEMENT_IBAN_DEFAULT"/>

        </fieldset>
    </fields>

    <fields name="params">
        <fieldset label="PLG_ELEMENT_IBAN_ADVANCED_LABEL"
                  addfieldpath="/administrator/components/com_fabrik/models/fields"
                  name="plg-element-emundus_colorpicker-advanced">
            <field name="encrypt_datas"
                   type="radio"
                   default="1"
                   class="btn-group"
                   description="PLG_ELEMENT_IBAN_ENCRYPT_DATAS_DESC"
                   label="PLG_ELEMENT_IBAN_ENCRYPT_DATAS">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
        </fieldset>
    </fields>
