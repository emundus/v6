<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset label="COM_FABRIK_OPTIONS" name="plg-element-emundus-fileupload-new">

			<field type="helplink"
				url="PLG_ELEMENT_FIELD_HELP_SERVER" />

			<field name="hidden"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_HIDDEN_DESC"
				label="PLG_ELEMENT_FIELD_HIDDEN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

		</fieldset>
	</fields>

	<fields name="params">

		<fieldset name="plg-element-emundus-fileupload-new-params" label="COM_FABRIK_ADVANCED">
			<field type="helplink"
				url="PLG_ELEMENT_FIELD_HELP_SERVER" />

			<field name="attachmentId"
				   type="text"
				   class="input-mini"
				   description="PLG_ELEMENT_EMUNDUS_FILEUPLOAD_ATTACHID_DESC"
				   label="PLG_ELEMENT_EMUNDUS_FILEUPLOAD_ATTACHID_LABEL"
				   size="60" />

			<field name="size"
				   type="text"
				   default="10485760"
				   class="input-mini"
				   description="PLG_ELEMENT_EMUNDUS_FILEUPLOAD_SIZE_DESC"
				   label="PLG_ELEMENT_EMUNDUS_FILEUPLOAD_SIZE_LABEL"
				   size="60" />

			<field name="can_submit_encrypted" type="radio" default="1" label="PLG_ELEMENT_FIELD_ENCRYPTED_PDF" description="PLG_ELEMENT_FIELD_ENCRYPTED_PDF_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
				<option value="2">USE_GLOBAL_CONFIG</option>
			</field>

			<field name="maxlength"
				type="maxlength"
				class="input-mini"
				default="255" label="PLG_ELEMENT_FIELD_MAX_LENGTH_LABEL"
				size="3" />

			<field name="disable"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_DISABLE_ELEMENT_DESC"
				label="PLG_ELEMENT_FIELD_DISABLE_ELEMENT_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field name="readonly"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_READ_ONLY_DESC"
				label="PLG_ELEMENT_FIELD_READ_ONLY_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
		</fieldset>

		<fieldset label="PLG_ELEMENT_FIELD_FORMATTING" name="plg-emundus-fileupload-formatting">
			<field type="helplink"
				url="PLG_ELEMENT_FIELD_HELP_SERVER" />

			<field name="bootstrap_class"
				type="bootstrapfieldclass"
				default="input-medium"
				label="PLG_ELEMENT_BOOTSTRAP_CLASS_LABEL"
				description="PLG_ELEMENT_BOOTSTRAP_CLASS_DESC" />
		</fieldset>
	</fields>
</form>
