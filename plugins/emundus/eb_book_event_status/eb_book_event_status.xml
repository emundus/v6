<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<extension group="system" method="upgrade" type="plugin" version="1">
    <name>eMundus - Book event by a status</name>
    <author>Brice Hubinet</author>
    <creationDate>Juillet 2021</creationDate>
    <copyright>(C) 2010-2021 EMUNDUS SOFTWARE. All rights reserved.</copyright>
    <license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
    <authorEmail>brice.hubinet@emundus.fr</authorEmail>
    <authorUrl>https://www.emundus.fr</authorUrl>
    <version>1.0.0</version>
    <description>Emundus Book Event Status, enables you to book event at a defined status</description>
    <files>
        <filename plugin="eb_book_event_status">eb_book_event_status.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="eb_book_event_status_step" type="field" default="4" label="Status *"
                       description="Status to defined when the event has to be book"/>
            </fieldset>
        </fields>
    </config>
</extension>
