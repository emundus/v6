<?xml version="1.0" encoding="utf-8"?>
<extension
		type="plugin"
		version="4.2.9"
		method="upgrade"
		group="emundus">
	<name>Emundus - Export to Aurion with user data</name>
	<creationDate>5 December 2019</creationDate>
	<version>2.0.0</version>
	<author>eMundus</author>
	<authorEmail>dev@emundus.fr</authorEmail>
	<authorUrl>https://www.emundus.fr</authorUrl>
	<copyright>(C) 2010-2019 EMUNDUS SOFTWARE. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin will Export User's data to Excelia Aurion </description>
	<files>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>excelia_aurion_export.xml</filename>
		<filename plugin="excelia_aurion_export">excelia_aurion_export.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_emundus_excelia_aurion_export.ini</language>
		<language tag="en-GB">en-GB.plg_emundus_excelia_aurion_export.sys.ini</language>
		<language tag="fr-FR">fr-FR.plg_emundus_excelia_aurion_export.ini</language>
		<language tag="fr-FR">fr-FR.plg_emundus_excelia_aurion_export.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset addfieldpath="/administrator/components/com_emundus/models/fields" name="basic">
				<field name="url" type="text" description="PLG_CRON_AURION_URL_DESC" label="PLG_CRON_AURION_URL_LABEL" size="30" />
				<field name="login" type="text" label="PLG_CRON_AURION_LOGIN_LABEL" size="30" />
				<field name="password" type="text" label="PLG_CRON_AURION_PASS_LABEL" size="30" />
				<field name="status" type="text" description="PLG_CRON_AURION_STATUS_DESC" label="PLG_CRON_AURION_STATUS" size="30" />
			</fieldset>
		</fields>
	</config>
</extension>
