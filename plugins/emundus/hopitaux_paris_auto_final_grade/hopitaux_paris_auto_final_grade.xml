<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<extension
        group="emundus"
        method="upgrade"
        type="plugin"
        version="4.2.9">
    <name>eMundus | Hopitaux de Paris - Complete final grade at status change</name>
    <author>Brice Hubinet</author>
    <creationDate>Juillet 2021</creationDate>
    <copyright>(C) 2010-2021 EMUNDUS SOFTWARE. All rights reserved.</copyright>
    <license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
    <authorEmail>brice.hubinet@emundus.fr</authorEmail>
    <authorUrl>https://www.emundus.fr</authorUrl>
    <version>2.0.0</version>
    <description>Emundus Final Grade Complete, complete final grade at status changes</description>
    <files>
        <filename>index.html</filename>
        <filename>hopitaux_paris_auto_final_grade.xml</filename>
        <filename plugin="hopitaux_paris_auto_final_grade">hopitaux_paris_auto_final_grade.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="final_grade_status_step" type="field" default="3" label="Status *" description="Status to defined when the final grade has to be completed" />
                <field name="final_grade_elts_to_complete" type="field" default="" label="Elements to complete *" description="Elements to complete in final grade form" />
                <field name="final_grade_elts_values" type="field" default="" label="Values *" description="Values of elements selected above" />
                <!-- <field name="final_grade_campaigns" type="field" default="" label="Campaigns" description="Campaigns to apply this plugin" /> -->
            </fieldset>
        </fields>
    </config>
</extension>
