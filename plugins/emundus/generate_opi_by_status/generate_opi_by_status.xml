    <version>1.0.0</version>
    <description>eMundus Generate OPI Code by status - used to create OPI from status</description>
    <files>
        <filename plugin="generate_opi_by_status">generate_opi_by_status.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="opi_status_step" type="field" label="Status *" description="Status to defined when the OPI code has to been generated" />
                <field name="opi_prefix" type="field" default="EM" label="Prefixe de OPI *" description="OPI Code prefix (e.g: EM1)" />
            </fieldset>
        </fields>
    </config>
</extension>
