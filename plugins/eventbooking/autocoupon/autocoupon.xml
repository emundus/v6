<?xml version="1.0" encoding="utf-8"?>
<extension version="3.9.0" type="plugin" group="eventbooking" method="upgrade">
    <name>Events Booking - Auto Coupon Generation</name>
    <author>Tuan Pham Ngoc</author>
    <creationDate>March 2018</creationDate>
    <author>Tuan Pham Ngoc</author>
    <authorEmail>tuanpn@joomdonation.com</authorEmail>
    <authorUrl>http://www.joomdonation.com</authorUrl>
    <copyright>Copyright (C) 2010 - 2021 Ossolution Team</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>3.12.1</version>
    <description>This plugin auto generate coupon codes for registrants when they register for your events</description>
    <files>
        <filename plugin="autocoupon">autocoupon.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="show_on_frontend"
                        type="radio"
                        label="Show on frontend"
                        description="If set to Yes, this plugin will be available on frontend event submission form"
                        class="btn-group btn-group-yesno"
                        default="0"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>