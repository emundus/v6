    <creationDate>2021-08-03 02:59:20</creationDate>
    <author>JoomUnited</author>
    <authorEmail>contact@joomunited.com</authorEmail>
    <authorUrl>www.joomunited.com</authorUrl>
    <copyright>Copyright Â© 2015 JoomUnited. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <description>Dropfiles Links for JCE</description>
    <files folder="plugins/jce/links-dropfiles">
        <file plugin="links-dropfiles">links-dropfiles.php</file>
        <file plugin="links-dropfiles">index.html</file>
        <folder>dropfileslinks</folder>
    </files>
    <params group="dropfileslinks">
        <param name="dropfiles" type="list" default="1" label="Dropfiles links"
               description="Allows you to browse Dropfiles categories and add a link to the file">
            <option value="1">WF_OPTION_YES</option>
            <option value="0">WF_OPTION_NO</option>
        </param>
    </params>

    <languages folder="administrator/language/en-GB">
        <language tag="en-GB">en-GB.plg_jce_links-dropfiles.ini</language>
        <language tag="en-GB">en-GB.plg_jce_links-dropfiles.sys.ini</language>
    </languages>
</extension>