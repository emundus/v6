<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields"
	        name="params">
		<fieldset name="plg-form-sms">
			<field description="PLG_FORM_SMS_GATEWAY_DESC"
			       directory="libraries/fabrik/fabrik/Helpers/sms_gateways"
			       hide_default="true"
			       hide_none="true"
			       label="PLG_FORM_SMS_GATEWAY_LABEL"
			       name="sms-gateway"
			       repeat="true"
			       type="filelist"/>

			<field default=""
			       label="PLG_FORM_SMS_USERNAME_LABEL"
			       name="sms-username"
			       description="PLG_FORM_SMS_USERNAME_DESC"
			       repeat="true"
			       size="30"
			       type="text"/>

			<field default=""
			       label="PLG_FORM_SMS_PASSWORD_LABEL"
			       description="PLG_FORM_SMS_PASSWORD_DESC"
			       name="sms-password"
			       repeat="true"
			       size="30"
			       type="text"/>

			<field default=""
			       description="PLG_FORM_SMS_MOBILE_DESC"
			       label="PLG_FORM_SMS_MOBILE_LABEL"
			       name="sms-to"
			       repeat="true"
			       size="30"
			       type="text"/>

			<field name="sms-to-eval"
				   type="fabrikeditor"
				   mode="php"
				   description="PLG_FORM_SMS_MOBILE_EVAL_DESC"
				   label="PLG_FORM_SMS_MOBILE_EVAL_LABEL"
				   repeat="true" />

			<field default=""
			       description="PLG_FORM_SMS_SENDERS_MOBILE_NUM_DESC"
			       label="PLG_FORM_SMS_SENDERS_MOBILE_NUM_LABEL"
			       name="sms-from"
			       repeat="true"
			       size="30"
			       type="text"/>

			<field name="sms_message"
			       type="textarea"
				   repeat="true"
			       label="PLG_FORM_SMS_MESSAGE_LABEL"
					description="PLG_FORM_SMS_MESSAGE_DESC"/>
			
			<field name="sms_custom_eval_message"
			       type="fabrikeditor"
			       mode="php"
			       description="PLG_FABRIK_FORM_SMS_CUSTOM_EVAL_MESSAGE_DESC"
			       label="PLG_FABRIK_FORM_SMS_CUSTOM_EVAL_MESSAGE_LABEL"
			       repeat="true" />

			<field name="sms_conditon"
				   type="fabrikeditor"
				   mode="php"
				   description="PLG_FABRIK_FORM_SMS_CONDITION_DESC"
				   label="PLG_FABRIK_FORM_SMS_CONDITION_LABEL"
				   repeat="true" />

		</fieldset>
	</fields>
</form>
