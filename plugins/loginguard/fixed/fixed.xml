<extension version="3.9.0" type="plugin" group="loginguard" method="upgrade">
	<name>PLG_LOGINGUARD_FIXED</name>
	<version>5.0.5</version>
	<creationDate>2021-11-18</creationDate>

	<author>Akeeba Ltd</author>
	<authorEmail>no-reply@akeeba.com</authorEmail>
	<authorUrl>https://www.akeeba.com</authorUrl>

	<copyright>Copyright (c)2016-2021 Akeeba Ltd</copyright>
	<license>GNU GPL v3 or later</license>

	<description>PLG_LOGINGUARD_FIXED_DESCRIPTION</description>

	<files>
		<filename plugin="fixed">fixed.php</filename>
		<filename>.htaccess</filename>
		<filename>web.config</filename>
	</files>

	<media folder="media" destination="plg_loginguard_fixed">
		<folder>images</folder>
	</media>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_loginguard_fixed.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_loginguard_fixed.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="helpurl"
						type="text"
						label="PLG_LOGINGUARD_FIXED_CONFIG_HELPURL_LABEL"
						description="PLG_LOGINGUARD_FIXED_CONFIG_HELPURL_DESC"
						default=""
						filter="url"
				/>
			</fieldset>
		</fields>
	</config>

</extension>