<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikamarket">
	<name>HikaMarket - StripeConnect integration</name>
	<hikainstall ordering="1" enable="0" report="0" />
	<creationDate>07 01 2020</creationDate>
	<version>1.0.0</version>
	<author>Obsidev</author>
	<authorEmail>dev@obsidev.com</authorEmail>
	<authorUrl>http://www.obsidev.com</authorUrl>
	<copyright>Copyright (C) 2012-2020 OBSIDEV SARL - All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin allow the front-end interface for StripeConnect</description>
	<files>
		<filename plugin="stripeconnect">stripeconnect.php</filename>
		<filename>stripeconnect_ctrl.php</filename>
		<filename>stripeconnect_class.php</filename>
		<filename>stripeconnect_backend.php</filename>
		<folder>views</folder>
		<folder>media</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_hikamarket_stripeconnect.ini</language>
	</languages>
	<params addpath="/components/com_hikamarket/params">
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikamarket/fields">
			<fieldset name="basic">
			</fieldset>
		</fields>
	</config>
</extension>
