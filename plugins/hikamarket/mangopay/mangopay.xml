	<copyright>Copyright (C) 2012-2021 OBSIDEV SARL - All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin allow the front-end interface for MangoPay</description>
	<files>
		<filename plugin="mangopay">mangopay.php</filename>
		<filename>mangopay_ctrl.php</filename>
		<filename>mangopay_class.php</filename>
		<filename>mangopay_backend.php</filename>
		<folder>views</folder>
		<folder>media</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_hikamarket_mangopay.ini</language>
	</languages>
	<params addpath="/components/com_hikamarket/params">
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikamarket/fields">
			<fieldset name="basic">
			</fieldset>
		</fields>
	</config>
</extension>
