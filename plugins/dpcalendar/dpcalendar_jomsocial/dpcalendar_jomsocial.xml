<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="plugin" group="dpcalendar"
	method="upgrade">
	<name>plg_dpcalendar_jomsocial</name>
	<author>Digital Peak</author>
	<creationDate>Feb 2017</creationDate>
	<copyright>(C) 2007 - 2016 Digital Peak. All rights reserved.
	</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html
		GNU/GPL
	</license>
	<authorEmail>info@digital-peak.com</authorEmail>
	<authorUrl>joomla.digital-peak.com</authorUrl>
	<version>5.6.5</version>
	<description>PLG_DPCALENDAR_JOMSOCIAL_XML_DESCRIPTION</description>
	<files>
		<filename plugin="dpcalendar_jomsocial">dpcalendar_jomsocial.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params"
			addfieldpath="/administrator/components/com_dpcalendar/models/fields">
			<fieldset name="basic">
				<field name="my-events" type="radio"
					label="PLG_DPCALENDAR_JOMSOCIAL_FIELD_MY_EVENTS_LABEL" description="PLG_DPCALENDAR_JOMSOCIAL_FIELD_MY_EVENTS_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="categories" type="radio"
					label="PLG_DPCALENDAR_JOMSOCIAL_FIELD_CALENDARS_LABEL" description="PLG_DPCALENDAR_JOMSOCIAL_FIELD_CALENDARS_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset name="activity" label="PLG_DPCALENDAR_JOMSOCIAL_FIELD_ACTIVITY">
				<field name="enable-activity-create" type="radio"
					label="PLG_DPCALENDAR_JOMSOCIAL_FIELD_ACTIVITY_CREATE_LABEL" description="PLG_DPCALENDAR_JOMSOCIAL_FIELD_ACTIVITY_CREATE_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>			
				<field name="enable-activity-save" type="radio"
					label="PLG_DPCALENDAR_JOMSOCIAL_FIELD_ACTIVITY_SAVE_LABEL" description="PLG_DPCALENDAR_JOMSOCIAL_FIELD_ACTIVITY_SAVE_DESC"
					default="0">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>			
				<field name="enable-activity-delete" type="radio"
					label="PLG_DPCALENDAR_JOMSOCIAL_FIELD_ACTIVITY_DELETE_LABEL" description="PLG_DPCALENDAR_JOMSOCIAL_FIELD_ACTIVITY_DELETE_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>			
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="list" default="1"
					label="PLG_DPCALENDAR_JOMSOCIAL_FIELD_CACHING_LABEL" description="PLG_DPCALENDAR_JOMSOCIAL_FIELD_CACHING_DESC">
					<option value="1">PLG_DPCALENDAR_JOMSOCIAL_FIELD_CACHING_JOOMLA
					</option>
					<option value="0">PLG_DPCALENDAR_JOMSOCIAL_FIELD_CACHING_NEVER
					</option>
				</field>
				<field name="cache_time" type="text" default="900"
					label="PLG_DPCALENDAR_JOMSOCIAL_FIELD_CACHING_TIME_LABEL"
					description="PLG_DPCALENDAR_JOMSOCIAL_FIELD_CACHING_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
