<?xml version="1.0" encoding="utf-8"?>
<extension version="3.7" type="plugin" group="dpcalendar" method="upgrade">
	<name>plg_dpcalendar_caldav</name>
	<author>Digital Peak</author>
	<creationDate>Sep 2017</creationDate>
	<copyright>(C) 2007 - 2017 Digital Peak. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.htmlGNU/GPL</license>
	<authorEmail>info@digital-peak.com</authorEmail>
	<authorUrl>joomla.digital-peak.com</authorUrl>
	<version>6.1.3</version>
	<description>PLG_DPCALENDAR_CALDAV_XML_DESCRIPTION</description>
	<files>
		<filename plugin="caldav">caldav.php</filename>
		<folder>forms</folder>
		<folder>language</folder>
		<folder>libraries</folder>
	</files>
	<config>
		<fields name="params"
		        addfieldpath="/administrator/components/com_dpcalendar/models/fields">
			<fieldset name="basic">
				<field name="ext" type="extcalendar" plugin="caldav" import="true" label="" description=""></field>
			</fieldset>
			<fieldset name="advanced">
				<field name="cache" type="list" default="1"
				       label="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_LABEL" description="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_DESC">
					<option value="1">PLG_DPCALENDAR_CALDAV_FIELD_CACHING_JOOMLA</option>
					<option value="2">PLG_DPCALENDAR_CALDAV_FIELD_CACHING_DB</option>
					<option value="0">PLG_DPCALENDAR_CALDAV_FIELD_CACHING_NEVER</option>
				</field>
				<field name="cache_time" type="text" default="900" showon="cache:1"
				       label="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_TIME_LABEL"
				       description="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_TIME_DESC"/>
				<field name="sync_start" type="text" default="-3 year" showon="cache:2"
				       label="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_SYNC_START_LABEL"
				       description="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_SYNC_START_DESC"/>
				<field name="sync_end" type="text" default="+3 year" showon="cache:2"
				       label="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_SYNC_END_LABEL"
				       description="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_SYNC_END_DESC"/>
				<field name="sync_steps" type="text" default="1 year" showon="cache:2"
				       label="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_SYNC_STEPS_LABEL"
				       description="PLG_DPCALENDAR_CALDAV_FIELD_CACHING_SYNC_STEPS_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
