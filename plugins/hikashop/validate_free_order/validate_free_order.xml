<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5" method="upgrade" group="hikashop">
	<name>Hikashop Validate free order Plugin</name>
	<creationDate>10 ao√ªt 2020</creationDate>
	<version>4.3.0</version>
	<author>Hikashop</author>
	<authorEmail>dev@hikashop.com</authorEmail>
	<authorUrl>http://www.hikashop.com</authorUrl>
	<copyright>(C) 2010-2020 HIKARI SOFTWARE. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to validate automatically free order</description>
	<files>
		<filename plugin="validate_free_order">validate_free_order.php</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="send_confirmation" type="radio" default="1" label="SEND_CONFIRMATION_EMAIL" description="FREE_ORDER_SEND_CONFIRMATION_EMAIL">
			<option value="0">HIKASHOP_NO</option>
			<option value="1">HIKASHOP_YES</option>
		</param>
		<param name="send_payment_notif" type="radio" default="1" label="SEND_PAYMENT_EMAIL" description="FREE_ORDER_SEND_PAYMENT_EMAIL">
			<option value="0">HIKASHOP_NO</option>
			<option value="1">HIKASHOP_YES</option>
		</param>
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field name="send_confirmation" type="radio" default="1" label="SEND_CONFIRMATION_EMAIL" description="FREE_ORDER_SEND_CONFIRMATION_EMAIL" class="btn-group btn-group-yesno">
					<option value="0">HIKASHOP_NO</option>
					<option value="1">HIKASHOP_YES</option>
				</field>
				<field name="send_payment_notif" type="radio" default="1" label="SEND_PAYMENT_EMAIL" description="FREE_ORDER_SEND_PAYMENT_EMAIL">
					<option value="0">HIKASHOP_NO</option>
					<option value="1">HIKASHOP_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
