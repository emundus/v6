                    name="columns"
                    type="list"
                    label="COM_DROPFILES_THEME_DEFAULT_PARAM_COLUMNS_LABEL"
                    description="COM_DROPFILES_THEME_DEFAULT_PARAM_COLUMNS_DESC"
                    default="2"
                    class="inline hide_on_manage inputbox dropfilesinput">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </field>
            <field
                name="showsize"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_SIZE_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_SIZE_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showtitle"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_TITLE_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_TITLE_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showversion"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_VERSION_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_VERSION_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showhits"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_HITS_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_HITS_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showdownload"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_DOWNLOAD_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_DOWNLOAD_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="bgdownloadlink" type="color" default="#76bc58"
                   label="COM_DROPFILES_THEME_DEFAULT_PARAM_BACKGROUND_COLOR_LABEL"
                   description="COM_DROPFILES_THEME_DEFAULT_PARAM_BACKGROUND_COLOR_DESC"
            />
            <field name="colordownloadlink" type="color" default="#FFF"
                   label="COM_DROPFILES_THEME_DEFAULT_PARAM_COLOR_DOWNLOAD_LINK_LABEL"
                   description="COM_DROPFILES_THEME_DEFAULT_PARAM_COLOR_DOWNLOAD_LINK_DESC"
            />
