<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="params">
        <fieldset name="params" mainpart="true" addrulepath="/administrator/components/com_dropfiles/models/rules"
                  addfieldpath="/administrator/components/com_dropfiles/models/fields">

            <field name="marginleft"
                   type="margin"
                   stype="marginleft"
                   default="10"
                   label="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_LEFT_LABEL"
                   description="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_LEFT_DESC"
                   message="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_LEFT_MSG"
                   validate="integer"
            />

            <field name="margintop"
                   type="margin"
                   stype="margintop"
                   default="10"
                   label="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_TOP_LABEL"
                   description="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_TOP_DESC"
                   message="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_TOP_MSG"
                   validate="integer"
            />
            <field name="marginright"
                   type="margin"
                   stype="marginright"
                   default="10"
                   label="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_RIGHT_LABEL"
                   description="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_RIGHT_DESC"
                   message="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_RIGHT_MSG"
                   validate="integer"
            />

            <field name="marginbottom"
                   type="margin"
                   stype="marginbottom"
                   default="10"
                   label="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_BOTTOM_LABEL"
                   description="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_BOTTOM_DESC"
                   message="COM_DROPFILES_THEME_DEFAULT_PARAM_MARGIN_BOTTOM_MSG"
                   validate="integer"
            />
