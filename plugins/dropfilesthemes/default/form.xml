                name="showdateadd"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_DATEADD_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_DATEADD_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showdatemodified"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_DATEMODIFIED_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_DATEMODIFIED_DESC"
                default="0"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showsubcategories"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_SUBCATEGORIES_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_SUBCATEGORIES_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showcategorytitle"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_CATEGORYTITLE_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_CATEGORYTITLE_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showbreadcrumb"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_BREADCRUMB_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_BREADCRUMB_DESC"
                default="1"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="showfoldertree"
                type="list"
                label="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_FOLDERTREE_LABEL"
                description="COM_DROPFILES_THEME_DEFAULT_PARAM_SHOW_FOLDERTREE_DESC"
                default="0"
                class="inline">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
