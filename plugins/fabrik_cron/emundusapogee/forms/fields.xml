<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-cron-emundusrecall" label="COM_FABRIK_OPTIONS">

			<field name="webservice_url"
				   type="text"
				   description="PLG_APOGEE_WSDL_DESC"
				   label="PLG_APOGEE_WSDL"
				   size="30"
			/>

			<field name="webservice_authentication" type="list" default="2" label="PLG_APOGEE_AUTHENTICATION" description="PLG_APOGEE_AUTHENTICATION_DESC">
				<option value="0">No Auth</option>
				<option value="1">Bearer Token</option>
				<option value="2">Basic Auth</option>
				<option value="3">Digest Auth</option>
			</field>

			<field name="webservice_username"
				   type="text"
				   description="PLG_APOGEE_LOGIN_USERNAME_DESC"
				   label="PLG_APOGEE_LOGIN_USERNAME"
				   size="30"
			/>

			<field name="webservice_password"
				   type="password"
				   description="PLG_APOGEE_LOGIN_PASSWORD_DESC"
				   label="PLG_APOGEE_LOGIN_PASSWORD"
				   size="30"
			/>

			<field name="xml_description_json"
				   type="file"
				   description="PLG_APOGEE_XML_DESCRIPTION_DESC"
				   label="PLG_APOGEE_XML_DESCRIPTION"
				   size="30"
			/>

			<field name="xml_data_json"
				   type="file"
				   description="PLG_APOGEE_XML_DATA_DESC"
				   label="PLG_APOGEE_XML_DATA"
				   size="30"
			/>

			<field name="status_to_send_request"
				   type="text"
				   description="PLG_APOGEE_REQUEST_SENDING_STATUS_DESC"
				   label="PLG_APOGEE_REQUEST_SENDING_STATUS"
				   size="30"
			/>
		</fieldset>

	</fields>
</form>
