<?xml version="1.0" encoding="utf-8" standalone="no"?>
<extension group="search" method="upgrade" type="plugin" version="4">
	<name>Search - eMundus</name>
	<author>eMundus</author>
	<creationDate>April 2016</creationDate>
	<copyright>Copyright (C) 2016 emundus.fr. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>contact@emundus.fr</authorEmail>
	<authorUrl>www.emundus.fr</authorUrl>
	<version>2.0.0</version>
	<description>ALLOWS SEARCHING OF ALL USERS</description>
	<files>
		<filename>emundus.xml</filename>
		<filename plugin="emundus">emundus.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field default="50" description="Number of Search items to return" label="Search Limit" name="search_limit" size="5" type="text"/>
				<field default="Applicants" description="Appears in search results, under the title." label="Section heading" name="search_section_heading" size="15" type="text"/>
			</fieldset>
		</fields>
	</config>
</extension>