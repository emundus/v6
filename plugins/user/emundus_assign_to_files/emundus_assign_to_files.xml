<?xml version="1.0" encoding="utf-8"?>
<extension version="4" type="plugin" group="user">
	<name>plg_user_emundus_assign_to_files</name>
	<author>Hugo Moracchini</author>
	<creationDate>September 2020</creationDate>
	<copyright>(C) 2020 eMundus. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>dev@emundus.fr</authorEmail>
	<authorUrl>emundus.fr</authorUrl>
	<version>2.0.0</version>
	<description>Assigns a user to different files based on his institution.</description>
	<files>
		<filename>emundus_assign_to_files.xml</filename>
		<filename plugin="emundus_assign_to_files">emundus_assign_to_files.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="fk_field" type="field" default="" description="PLG_USER_EMUNDUS_FILES_ASSIGN_FK_FIELD_DESC" label="PLG_USER_EMUNDUS_FILES_ASSIGN_FK_FIELD_LABEL" />
				<field name="assignment_rule" type="list" default="0" description="PLG_USER_EMUNDUS_FILES_ASSIGN_RULE_OF_ASSIGNMENT_DESC" label="PLG_USER_EMUNDUS_FILES_ASSIGN_RULE_OF_ASSIGNMENT_LABEL" >
					<option value="organisation_id">University/Organisation ID</option>
					<option value="organisation_note">University/Organisation NOTE</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>