<extension type="component" version="3.9.0" method="upgrade">
	<name>Admintools</name>
	<creationDate>2023-01-09</creationDate>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@akeeba.com</authorEmail>
	<authorUrl>https://www.akeeba.com</authorUrl>
	<copyright>Copyright (c)2010-2023 Nicholas K. Dionysopoulos</copyright>
	<license>This component in released under the GNU/GPL v3 or later license</license>
	<version>6.1.8</version>
	<description>Security and utilitarian tools for Joomla! site administrators</description>

	<!-- Public front end files -->
	<files folder="frontend">
        <folder>Dispatcher</folder>

        <filename>admintools.php</filename>
	</files>

	<!-- Front end translation files -->
	<languages folder="language/frontend">
		<language tag="en-GB">en-GB/en-GB.com_admintools.ini</language>
	</languages>

	<!-- Administrator back-end section -->
	<administration>
		<!-- Administration menu -->
		<menu>COM_ADMINTOOLS</menu>

		<!-- Back-end files -->
        <files folder="backend">
            <folder>assets</folder>
            <folder>Controller</folder>
            <folder>Dispatcher</folder>
			<folder>fields</folder>
            <folder>Helper</folder>
            <folder>media</folder>
            <folder>Model</folder>
            <folder>sql</folder>
			<folder>tmpl</folder>
            <folder>Toolbar</folder>
            <folder>View</folder>

            <filename>access.xml</filename>
            <filename>admintools.php</filename>
            <filename>CHANGELOG.php</filename>
            <filename>config.xml</filename>
            <filename>fof.xml</filename>
            <filename>version.php</filename>
        </files>

		<!-- Back-end translation files -->
		<languages folder="language/backend">
			<language tag="en-GB">en-GB/en-GB.com_admintools.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_admintools.sys.ini</language>
		</languages>

	</administration>

	<scriptfile>script.com_admintools.php</scriptfile>
</extension>
