<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade" client="site">

	<name>Messenger</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>August 2021</creationDate>
	<author>eMundus</author>
	<copyright>Copyright (C) 2020 emundus.fr - All rights reserved.</copyright>
	<authorEmail>contact@emundus.fr</authorEmail>
	<authorUrl>www.emundus.fr</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.9.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>MESSENGER! A new messages box by eMundus!</description>

	<scriptfile>script.com_emundus_messenger.php</scriptfile>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>public</folder>
		<folder>src</folder>
		<folder>tests</folder>
		<folder>views</folder>
		<filename>babel.config.js</filename>
		<filename>controller.php</filename>
		<filename>emundus_messenger.php</filename>
		<filename>emundus_messenger.xml</filename>
		<filename>index.html</filename>
		<filename>package.json</filename>
		<filename>package-lock.json</filename>
		<filename>README.md</filename>
		<filename>script.com_emundus_messenger.php</filename>
		<filename>vue.config.js</filename>
	</files>

	<languages folder="language">
		<language tag="fr-FR">fr-FR/fr-FR.com_emundus_messenger.ini</language>
		<language tag="en-GB">en-GB/en-GB.com_emundus_messenger.ini</language>
	</languages>

	<administration>
		<!-- Administration Menu Section -->
		<menu img="../administrator/components/com_emundus_messenger/puce.gif">Tchooz</menu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>views</folder>
			<file>config.xml</file>
			<file>controller.php</file>
			<file>emundus_messenger.php</file>
			<file>emundus_messenger.xml</file>
			<file>index.html</file>
			<file>router.php</file>
		</files>

		<languages folder="language">
			<language tag="fr-FR">fr-FR.com_emundus_messenger.ini</language>
			<language tag="en-GB">en-GB.com_emundus_messenger.ini</language>
		</languages>
	</administration>

</extension>
