{% extends ajax-suffix ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}

{% block gantry %}
<form method="POST">
    <div class="pull-right">
        <button class="button">{{ 'GANTRY5_PLATFORM_SAVE'|trans }}</button>
        <button class="button" name="METHOD" value="DELETE">{{ 'GANTRY5_PLATFORM_RESET'|trans }}</button>
        <a class="button" data-g5-ajaxify="" data-g5-ajaxify-target="[data-g5-content]" href="{{ gantry.route(parent) }}">{{ 'GANTRY5_PLATFORM_BACK'|trans }}</a>
    </div>
    <div id="settings" class="cards-wrapper">
        <div class="card settings-block">
            <h4>
                {{ 'GANTRY5_PLATFORM_EDIT'|trans }} {{ key }}
            </h4>
            <div class="inner-params">
                {% include 'forms/fields.html.twig' %}
            </div>
        </div>
    </div>
</form>
{% endblock %}
