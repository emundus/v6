{% extends ajax-suffix ? "@gantry-admin/partials/ajax.html.twig" : "@gantry-admin/partials/base.html.twig" %}

{% block gantry %}
<form method="post">
    <div class="pull-right">
        <a class="button" data-g5-ajaxify="" data-g5-ajaxify-target="[data-g5-content]" href="{{ gantry.route(parent) }}"><i class="fa fa-fw fa-arrow-left" aria-hidden="true"></i> {{ 'GANTRY5_PLATFORM_BACK'|trans }}</a>
        <button type="submit" class="button button-primary button-save" data-save="{{ 'GANTRY5_PLATFORM_PARTICLE_DEFAULTS'|trans }}"><i class="fa fa-fw fa-check" aria-hidden="true"></i> <span>{{ 'GANTRY5_PLATFORM_SAVE_SETTINGS'|trans }}</span></button>
    </div>
    <div id="settings" class="cards-wrapper">
        <div class="card settings-block">
            <h4>
                {{ particle.name }}
                {% if particle.form.fields.enabled %}
                {% include 'forms/fields/enable/enable.html.twig' with {'default': true, 'name': 'enabled', 'field': particle.form.fields.enabled, 'value': data.enabled} %}
                {% endif %}
            </h4>
            <div class="inner-params">
                {% include 'forms/fields.html.twig' with {'blueprints': particle.form} %}
            </div>
        </div>
    </div>
    <input type="hidden" name="_end" value="1" />
</form>
{% endblock %}
