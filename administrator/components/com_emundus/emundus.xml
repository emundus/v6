<?xml version="1.0" encoding="utf-8" standalone="no"?>
<extension xmlns="http://www.joomla.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" client="site" method="upgrade" type="component" version="2.5" xsi:schemaLocation="http://www.joomla.org extension.xsd ">
	<name>com_emundus</name>
	<creationDate>August 2018</creationDate>
	<author>Benjamin Rivalland</author>
	<copyright>Copyright (C) 2018 emundus.fr - All rights reserved.</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>dev@emundus.fr</authorEmail>
	<authorUrl>www.emundus.fr</authorUrl>
	<version>1.36.7</version>
	<description>Online application component for Joomla!</description>
	<scriptfile>script.com_emundus.php</scriptfile>
	
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>views</folder>
		<file>controller.php</file>
		<file>emundus.php</file>
		<file>index.html</file>
	</files>

	<media folder="media">
		<folder>com_emundus/images</folder>
		<folder>com_emundus/css</folder>
		<folder>com_emundus/js</folder>
		<folder>com_emundus/lib</folder>
		<file>com_emundus/index.html</file>
	</media>

	<languages folder="language">
		<language tag="fr-FR">fr-FR.com_emundus.ini</language>
		<language tag="en-GB">en-GB.com_emundus.ini</language>
	</languages>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>

	<administration>
		<menu img="../administrator/components/com_emundus/puce.gif">eMundus</menu>
		<files folder="admin">
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<file>access.xml</file>
			<file>config.xml</file>
			<file>controller.php</file>
			<file>emundus.php</file>
			<file>emundus.xml</file>
			<file>index.html</file>
			<file>router.php</file>
		</files>

		<languages folder="language">
			<language tag="fr-FR">fr-FR.com_emundus.ini</language>
			<language tag="en-GB">en-GB.com_emundus.ini</language>
		</languages>
	</administration>

</extension>
