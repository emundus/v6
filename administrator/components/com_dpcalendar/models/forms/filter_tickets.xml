<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" label="" description=""
			hint="JSEARCH_FILTER" />
		<field name="state" type="status" label="COM_CONTENT_FILTER_PUBLISHED"
			description="COM_CONTENT_FILTER_PUBLISHED_DESC" onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="3">COM_DPCALENDAR_BOOKING_FIELD_STATE_NEED_PAYMENT</option>
			<option value="4">COM_DPCALENDAR_BOOKING_FIELD_STATE_HOLD</option>
			<option value="5">COM_DPCALENDAR_BOOKING_FIELD_STATE_INVITED</option>
		</field>
		<field name="ticket_holder" type="dpauthor" label="COM_CONTENT_FILTER_AUTHOR"
			table_name="dpcalendar_bookings" author_field="user_id" description="COM_CONTENT_FILTER_AUTHOR_DESC"
			onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_AUTHOR</option>
		</field>
		<field name="event_id" type="event" onchange="this.form.submit();"
			label="COM_DPCALENDAR_TICKET_FIELD_EVENT_LABEL" description="COM_DPCALENDAR_TICKET_FIELD_EVENT_DESC"
			required="true" />
	</fields>
	<fields name="list">
		<field name="fullordering" type="list" label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC" onchange="this.form.submit();"
			default="a.id DESC">
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
			<option value="a.name ASC">COM_DPCALENDAR_BOOKING_FIELD_NAME_LABEL</option>
			<option value="a.name DESC">COM_DPCALENDAR_BOOKING_FIELD_NAME_LABEL</option>
			<option value="event_title ASC">COM_DPCALENDAR_EVENT</option>
			<option value="event_title DESC">COM_DPCALENDAR_EVENT</option>
			<option value="booking_name ASC">JAUTHOR_ASC</option>
			<option value="booking_name DESC">JAUTHOR_DESC</option>
			<option value="e.start_date ASC">JDATE_ASC</option>
			<option value="e.start_date DESC">JDATE_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field name="limit" type="limitbox" class="input-mini" default="25"
			label="COM_CONTENT_LIST_LIMIT" description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();" />
	</fields>
</form>
