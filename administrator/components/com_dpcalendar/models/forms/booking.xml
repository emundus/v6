<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_dpcalendar/models/fields">
		<field name="id" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			type="text" readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />
		<field name="event_id" type="event"
			label="COM_DPCALENDAR_TICKET_FIELD_EVENT_LABEL" description="COM_DPCALENDAR_TICKET_FIELD_EVENT_DESC" />
		<field name="user_id" type="user"
			label="COM_DPCALENDAR_BOOKING_FIELD_USER_LABEL" description="COM_DPCALENDAR_BOOKING_FIELD_USER_DESC" />

		<field name="email" type="email" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_BOOKING_FIELD_EMAIL_LABEL" description="COM_DPCALENDAR_BOOKING_FIELD_EMAIL_DESC"
			required="true" />
		<field name="telephone" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_BOOKING_FIELD_TELEPHONE_LABEL" description="COM_DPCALENDAR_BOOKING_FIELD_TELEPHONE_DESC" />
		<field name="country" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_LOCATION_FIELD_COUNTRY_LABEL" description="" />
		<field name="province" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_LOCATION_FIELD_PROVINCE_LABEL" description="" />
		<field name="city" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_LOCATION_FIELD_CITY_LABEL" description="" />
		<field name="zip" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_LOCATION_FIELD_ZIP_LABEL" description="" />
		<field name="street" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_LOCATION_FIELD_STREET_LABEL" description="" />
		<field name="number" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_LOCATION_FIELD_NUMBER_LABEL" description="" />
		<field name="latitude" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_LOCATION_FIELD_LATITUDE_LABEL" description="" />
		<field name="longitude" type="text" class="input-xlarge" size="40"
			label="COM_DPCALENDAR_LOCATION_FIELD_LONGITUDE_LABEL" description="" />

		<field name="name" type="text" class="input-xlarge" size="40"
			required="true" label="COM_DPCALENDAR_BOOKING_FIELD_NAME_LABEL"
			description="COM_DPCALENDAR_BOOKING_FIELD_NAME_DESC" />
		<field name="series" type="radio"
			label="COM_DPCALENDAR_BOOKING_FIELD_SERIES_LABEL" description="COM_DPCALENDAR_BOOKING_FIELD_SERIES_DESC"
			class="inputbox btn-group" size="1" default="0">
			<option value="1" class="btn">JYES</option>
			<option value="0" class="btn">JNO</option>
		</field>
		<field name="amount" type="integer"
			label="COM_DPCALENDAR_BOOKING_FIELD_AMOUNT_LABEL" description="COM_DPCALENDAR_BOOKING_FIELD_AMOUNT_DESC"
			class="" first="0" last="1" step="1" default="0">
		</field>
		<field name="state" type="list" label="JSTATUS"
			description="COM_DPCALENDAR_BOOKING_FIELD_STATE_DESC" class="inputbox"
			size="1" default="1">
			<option value="1">COM_DPCALENDAR_BOOKING_FIELD_STATE_PUBLISHED
			</option>
			<option value="0">COM_DPCALENDAR_BOOKING_FIELD_STATE_UNPUBLISHED
			</option>
			<option value="2">JARCHIVED</option>
			<option value="3">COM_DPCALENDAR_BOOKING_FIELD_STATE_NEED_PAYMENT
			</option>
			<option value="4">COM_DPCALENDAR_BOOKING_FIELD_STATE_HOLD</option>
			<option value="5">COM_DPCALENDAR_BOOKING_FIELD_STATE_INVITED
			</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="transaction_id" type="text" class="inputbox" size="40"
			label="COM_DPCALENDAR_BOOKING_FIELD_INVOICE_LABEL" description="COM_DPCALENDAR_BOOKING_FIELD_INVOICE_DESC" />
		<field name="type" type="text" class="inputbox" size="40"
			default="" label="COM_DPCALENDAR_BOOKING_FIELD_TYPE_LABEL"
			description="COM_DPCALENDAR_BOOKING_FIELD_TYPE_DESC" />
		<field name="price" type="text" class="inputbox" size="40"
			label="COM_DPCALENDAR_BOOKING_FIELD_PRICE_LABEL" description="COM_DPCALENDAR_BOOKING_FIELD_PRICE_DESC" />
		<field name="processor" type="plugins" folder="dpcalendarpay"
			class="inputbox" size="40" label="COM_DPCALENDAR_BOOKING_FIELD_PROCESSOR_LABEL"
			description="COM_DPCALENDAR_BOOKING_FIELD_PROCESSOR_DESC">
			<option value=""></option>
		</field>
		<field name="payer_email" type="email" class="inputbox" size="40"
			label="COM_DPCALENDAR_BOOKING_FIELD_EMAIL_LABEL" description="COM_DPCALENDAR_BOOKING_FIELD_EMAIL_DESC" />

		<field name="captcha" type="captcha" label="" validate="captcha" />
	</fieldset>
</form>
