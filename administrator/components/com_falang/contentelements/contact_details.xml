<?xml version="1.0"?>
<falang type="contentelement">
	<name>Contact</name>
	<author>St√©phane Bouey</author>
	<version>1.0.1</version>
    <copyright>www.faboba.com</copyright>
    <description>Definition for default Joomla Contacts Component</description>
	<reference>
		<table name="contact_details">
			<field type="referenceid" name="id" translate="0">ID</field>
			<field type="titletext" name="name" length="50" maxlength="255" translate="1">Name</field>
			<field type="text" name="alias" length="50" maxlength="255" translate="1">Alias</field>
			<field type="text" name="con_position"  length="50" maxlength="255" translate="1">Position</field>
			<field type="text" name="address" length="50" maxlength="255" translate="1">Address</field>
			<field type="text" name="suburb" length="50" maxlength="255" translate="1">Suburb</field>
			<field type="text" name="state" length="50" maxlength="255" translate="1">State</field>
			<field type="text" name="postcode" length="50" maxlength="255" translate="1">Postcode</field>
			<field type="text" name="country" length="50" maxlength="255" translate="1">Country</field>
			<field type="text" name="telephone" length="50" maxlength="255" translate="1">Telephone</field>
			<field type="text" name="mobile" length="50" maxlength="255" translate="1">Mobile</field>
			<field type="text" name="fax" length="50" maxlength="255" translate="1">Fax</field>
			<field type="text" name="webpage" length="50" maxlength="255" translate="1">Website</field>
			<field type="htmltext" name="misc" length="50" maxlength="255" translate="1">Misc</field>
            <field type="textarea" name="metadesc"  rows="2" columns="80" translate="1">Metadesc</field>
			<field type="params" name="params" translate="1">Params</field>
        </table>
	</reference>
	<translationfilters>
		<keyword>name</keyword>
        <contact_details_category>catid</contact_details_category>
		<published>published</published>
	</translationfilters>
</falang>
