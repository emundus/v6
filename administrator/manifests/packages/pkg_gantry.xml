    <scriptfile>install.php</scriptfile>

    <files folder="packages">
        <!-- Mandatory system plugin -->
        <file type="plugin"    group="system"     id="gantry"              enabled="1">plg_system_gantry-4.1.43.zip</file>
        <!-- Gantry framework library -->
        <file type="library"                      id="gantry"              enabled="1">lib_gantry-4.1.43.zip</file>
