<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Location - Table Layout">
        <message>
            Displays a list of events from a location using table layout
        </message>
    </layout>
    <state>
        <name>Location - Table Layout</name>
        <description>Displays a list of events from a location using table layout</description>
        <fields name="request">
            <fieldset name="request"
                      addfieldpath="/administrator/components/com_eventbooking/elements">
                <field name="location_id" type="eblocation" size="3" default="0" label="Select Location"
                       description="Choose the Location which you want to display events" required="true"/>
            </fieldset>
        </fields>
        <fields name="params">
            <fieldset name="basic">
                <field name="hide_past_events" type="list" default="2" label="Hide Past Events"
                       description="Choose to show/hide past events for this menu item">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                    <option value="2">Use Configuration</option>
                </field>
                <field name="display_num" type="list"
                       default="10"
                       description="JGLOBAL_NUMBER_ITEMS_LIST_DESC"
                       label="JGLOBAL_NUMBER_ITEMS_LIST_LABEL">
                    <option value="5">J5</option>
                    <option value="10">J10</option>
                    <option value="15">J15</option>
                    <option value="20">J20</option>
                    <option value="25">J25</option>
                    <option value="30">J30</option>
                    <option value="50">J50</option>
                    <option value="100">J100</option>
                    <option value="0">Use Configuration</option>
                </field>
            </fieldset>
        </fields>
    </state>
</metadata>
