@import "nib"
@import "pygments"


global-reset()



//
// Configuration
//

$system-base-font-size = 16px

$font-size = 17px
$column = 48px  // The column-width of your grid in pixels
$gutter = 24px  // The gutter-width of your grid in pixels


cols($cols)
  (($cols * ($column + $gutter) - $gutter)/$font-size)rem

//
// Column-widths in a function, in ems
//
column-width($cols = 1)
  width cols($cols)


// Sets the left margin to account for the additional columns
column-offset($cols = 2)
  margin-left (-(($cols * ($column + $gutter) - $gutter)/$font-size)/2)rem




*
  box-sizing border-box

html
  font-size ($font-size / $system-base-font-size)em


body
  // Font family set by typekit
  font-size 1em
  background-color #f4f4f4
  background-image url("../images/background.png")
  background-repeat repeat

  line-height 160%
  font-weight 300
  color black

  padding 4.5em 0 0 0





//
// Handling the font loading
//
//
@keyframes rotating
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)


@css {
  #loading-font {
    background: url(data:image/gif;base64,) no-repeat top left
  }
  @media all and (-webkit-min-device-pixel-ratio: 1.5) {
    #loading-font {
      background-image: url(data:image/gif;base64,) no-repeat top left;
      -webkit-background-size: 88px 88px;
      -moz-background-size: 88px 88px;
      background-size: 88px 88px;
    }
  }

}

#loading-font
  position absolute

  // opacity 0
  // Chrome doesn't handle hidden transformations too well
  display none
  transition opacity 0.4s ease-in-out
  width 88px
  height @width
  
  top 450px
  left 50%
  margin-left -(@width/2)
  .ie &
    display none
  span
    display none


article section
  opacity 0
  transition opacity 0.4s ease-in-out

.wf-active
.wf-inactive
  article section
    opacity 1

.wf-loading 
  #loading-font
    // opacity 1
    display block
    animation rotating 2s linear infinite
    .ie &
      display block



  article section
    opacity 0
  &.ie
    article section
      visibility hidden












a#fork-me
  position absolute
  top 0
  right 0
  border 0
  width 140px
  height 140px
  image "../images/fork-me.png" 140px 140px
  span
    display none


article

  > header

    > img
      display none

    h1#logo

      margin 0 auto

      padding-top 0
      border none !important

      width 247px
      height 267px

      image "../images/logo.png" 247px 267px

      span
        display none


    #intro
      background black
      margin-top 3.2em
      margin-bottom 3.2em
      padding 0

      h2
        padding 1.4em 1.9em
        color white
        font-weight 200
        font-size 1.66em
        line-height 140%



    #social-buttons
      a
        background none
      margin 1em 0 2em 0
      text-align center
      .social-button
        display inline-block
      @media screen and (max-width: 600px)
        .social-button
          display block
      // width 85px
      .twitter-share-button
        margin-left 20px
      .facebook-social-button
        margin-right 20px

      .fb-like
        span
          vertical-align top

  section
    strong
      font-weight 600

    a
      color white
      background black
      display inline-block
      padding 0px 0.5em
      text-decoration underline



    //
    // Headers
    // 
    
    h1
    h2
    h3
      color black
      line-height 140%

    h1
      border-top 3px solid black
      font-weight 600
      margin 4em 0 2em 0
      font-size 2.22em
      text-transform uppercase
    h2
      font-weight 400
      margin 2em 0 0.7em 0
      font-size 2.22em
    h3
      font-size 2em


    hr
      border none
      display block
      height 2px
      background black
      margin 3.75em 0


    table
      width 100%
      border 1px solid black
      border-left none
      border-top none
      td
      th
        border 1px solid black
        border-right none
        border-bottom none
        padding 0.5em 0.9em
        vertical-align top
      tbody
        tr:first-of-type
          td:first-of-type
            border-top-color black
        tr
          td:first-of-type
            background black
            color white
            border-top-color white
            text-align right
          td
            background white

    ul
      li
        border-top 1px dotted black
        &:first-of-type
          border none
        padding 0.4em 0 0.4em 20px
        background url("../images/arrow.png") no-repeat left 0.9em
        @media all and (-webkit-min-device-pixel-ratio: 1.5)
          background-image url("../images/arrow@2x.png")
          background-size 12px 9px


    ul
    ol
    p
      margin 1.4em 0
    pre
      margin 1.8em 0

    pre
      overflow auto
      background #fff
      padding 0.5em 0.8em
    code
      // Font will be set by typekit


    blockquote
      margin 3.1em 0

      background black
      padding 1.3em 1.9em
      color white
      font-weight 200
      font-size 1.1em
      line-height 140%

      p
        margin 0
      a
        display inline
        padding 0
        background transparent






footer
  margin-top 19em
  background black
  padding-top 3em
  padding-bottom 6.25em
  color white

  a
    color white
    text-decoration none

  h1
    color white
    line-height 140%
    font-weight 600
    margin 0 0 0.5em 0
    font-size 2.22em

  p
    margin 0.5em 0


  section
    padding-bottom 1.5em

  clearfix()


// Grid

article
footer > div
  margin-left auto
  margin-right auto



@viewport
  width device-width




//  Mobile layout 
//  240–479 px
//  Zoomed out below 320 px
@media screen and (max-width: 37.5em)

  article, footer > div
    width auto
    margin-left 1em
    margin-right 1em


  table
  table tr
  table td
    display block
  article section table
    tbody
      tr
        td:first-of-type
          text-align left
  table
    thead
      display none



//  Tablet layout 
//  600-911 px
//  Zoomed in above 600 px
@media screen and (min-width: 37.5em)
  article, footer > div
    column-width 8



//  Widescreen layout 
//  912-1887 px
//  Zoomed in above 912 px
@media screen and (min-width: 57em)
  article, footer > div
    column-width 10

  footer
    section
      h1 span
        display block // Make sure the titles break at the right places
      column-width 5
      display inline-block

      &:nth-child(odd)
        padding-right 1em
      &:nth-child(even)
        padding-left 1em
      vertical-align top



//  Huge-screen layout 
//  1888-2520 px
//  Zoomed in above 1920 px
@media screen and (min-width: 70em)
  article section pre
    column-offset 2
    column-width 12
    padding 1em 1.2em





//  Full page zooms
@media screen and (max-width: 16.875em)
  html
    font-size: (($font-size - 2)/$system-base-font-size)em;


@media screen and (max-width: 19.9375em)
  html
    font-size: (($font-size - 1)/$system-base-font-size)em;


@media screen and (min-width: 32.5em) and (max-width: 37.4375em),
       screen and (min-width: 45em) and (max-width: 56.9375em) {
  html {
    font-size: (($font-size + 1)/$system-base-font-size)em;
  }
}

@media screen and (min-width: 56.9em) {
  html {
    font-size: (($font-size + 2)/$system-base-font-size)em;
  }
}

