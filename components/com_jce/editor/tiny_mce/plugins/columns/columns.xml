<?xml version="1.0" ?>
<extension version="2.5" type="plugin" group="jce" method="upgrade">
	<name>JCE - Columns</name>
	<version>1.0.0</version>
	<creationDate>May 2019</creationDate>
	<author>Ryan Demmer</author>
	<authorEmail>info@joomlacontenteditor.net</authorEmail>
	<authorUrl>https://www.joomlacontenteditor.net/</authorUrl>
	<copyright>Copyright (C) 2006 - 2020 Ryan Demmer. All rights reserved</copyright>
	<license>GNU/GPL Version 2 - http://www.gnu.org/licenses/gpl-2.0.html</license>
	<description>Flex Columns for JCE</description>
	<icon>columns</icon>
	<files></files>
	<fields name="columns">
		<fieldset name="config">
			<field name="framework" type="list" default="" label="WF_COLUMNS_FRAMEWORK" description="WF_COLUMNS_FRAMEWORK_DESC">
				<option value="">WF_COLUMNS_FRAMEWORK_GENERIC</option>
				<option value="uikit">WF_COLUMNS_FRAMEWORK_YOOTHEME</option>
				<option value="bootstrap">WF_COLUMNS_FRAMEWORK_BOOTSTRAP</option>
			</field>
			<field name="stack" type="list" default="medium" label="WF_COLUMNS_STACK" description="WF_COLUMNS_STACK_DESC">
				<option value="">WF_COLUMNS_STACK_NONE</option>
				<option value="small">WF_COLUMNS_STACK_SMALL</option>
				<option value="medium">WF_COLUMNS_STACK_MEDIUM</option>
				<option value="large">WF_COLUMNS_STACK_LARGE</option>
			</field>
			<field name="gap" type="list" default="medium" label="WF_COLUMNS_GAP" description="WF_COLUMNS_GAP_DESC">
				<option value="">WF_COLUMNS_GAP_NONE</option>
				<option value="small">WF_COLUMNS_GAP_SMALL</option>
				<option value="medium">WF_COLUMNS_GAP_MEDIUM</option>
				<option value="large">WF_COLUMNS_GAP_LARGE</option>
			</field>
		</fieldset>
	</fields>
	<languages></languages>
	<help></help>
</extension>
