<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Search file">
        <message>Dropfiles Search</message>
    </layout>
    <fields name="request">
        <fieldset name="request"
                  addfieldpath="/administrator/components/com_dropfiles/models/fields"
        >
            <field name="catid" type="category"
                   description="JGLOBAL_FIELD_CATEGORIES_CHOOSE_CATEGORY_DESC"
                   extension="com_dropfiles"
                   label="JGLOBAL_FIELD_CATEGORIES_CHOOSE_CATEGORY_LABEL"
                   show_root="true"
                   required="true"
            />

            <field name="ftags" type="droptag"
                   description="COM_DROPFILES_CONFIG_SEARCH_DEFAULT_TAGS_DESC"
                   label="COM_DROPFILES_CONFIG_SEARCH_DEFAULT_TAGS_LABEL"
                   size="50"
                   default=""
                   multiple="true"
                   hide_none="true"
            />
        </fieldset>
    </fields>
    <fields name="params">
        <fieldset name="basic">
            <field
                name="show_filters"
                type="radio"
                label="COM_DROPFILES_CONFIG_SEARCH_SHOW_FILTERS_LABEL"
                description="COM_DROPFILES_CONFIG_SEARCH_SHOW_FILTERS_DESC"
                class="btn-group"
                default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="cat_filter"
                type="radio"
                label="COM_DROPFILES_CONFIG_SEARCH_CAT_FILTER_LABEL"
                description="COM_DROPFILES_CONFIG_SEARCH_CAT_FILTER_DESC"
                class="btn-group"
                default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="tag_filter"
                type="radio"
                label="COM_DROPFILES_CONFIG_SEARCH_TAG_FILTER_LABEL"
                description="COM_DROPFILES_CONFIG_SEARCH_TAG_FILTER_DESC"
                class="btn-group"
                default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="display_tag"
                type="list"
                label="COM_DROPFILES_CONFIG_SEARCH_DISPLAY_TAG_LABEL"
                description="COM_DROPFILES_CONFIG_SEARCH_DISPLAY_TAG_DESC"
                class="btn-group"
                default="searchbox">
                <option value="searchbox">Search box</option>
                <option value="checkboxes">Checkboxes</option>
            </field>
            <field name="atags" type="droptag"
                   description="COM_DROPFILES_CONFIG_SEARCH_AVAILABLE_TAGS_DESC"
                   label="COM_DROPFILES_CONFIG_SEARCH_AVAILABLE_TAGS_LABEL"
                   size="50"
                   default=""
                   multiple="true"
                   hide_none="true"
            />
            <field
                name="creation_date"
                type="radio"
                label="COM_DROPFILES_CONFIG_SEARCH_CREATION_DATE_FILTER_LABEL"
                description="COM_DROPFILES_CONFIG_SEARCH_CREATION_DATE_FILTER_DESC"
                class="btn-group"
                default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field
                name="update_date"
                type="radio"
                label="COM_DROPFILES_CONFIG_SEARCH_UPDATE_DATE_FILTER_LABEL"
                description="COM_DROPFILES_CONFIG_SEARCH_UPDATE_DATE_FILTER_DESC"
                class="btn-group"
                default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>

            <field
                name="search_limit"
                type="list"
                label="COM_DROPFILES_CONFIG_SEARCH_LIMIT_LABEL"
                description="COM_DROPFILES_CONFIG_SEARCH_LIMIT_DESC"
                class="btn-group"
                default="20">
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </field>
        </fieldset>
    </fields>
</metadata>
