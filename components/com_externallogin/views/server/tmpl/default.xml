<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_EXTERNALLOGIN_SERVER_VIEW_DEFAULT_TITLE" option="COM_EXTERNALLOGIN_SERVER_VIEW_DEFAULT_OPTION">
		<help key = "COM_EXTERNALLOGIN_SERVER_HELP"/>
		<message>COM_EXTERNALLOGIN_SERVER_VIEW_DEFAULT_DESC</message>
	</layout>

	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">

			<field
				type="sql"
				name="server"
				query="SELECT id as value, title as server FROM #__externallogin_servers ORDER BY ordering ASC"
				label="COM_EXTERNALLOGIN_SITE_FIELD_SERVER_LABEL"
				description="COM_EXTERNALLOGIN_SITE_FIELD_SERVER_DESC"
			/>

		</fieldset>
	</fields>
	<fields name="params">

		<!-- Basic options. -->
		<fieldset name="basic" label="COM_MENUS_BASIC_FIELDSET_LABEL">

			<field
				name="redirect"
				type="menuitem"
				label="COM_EXTERNALLOGIN_SITE_FIELD_LOGIN_REDIRECTURL_LABEL"
				description="COM_EXTERNALLOGIN_SITE_FIELD_LOGIN_REDIRECTURL_DESC"
			>
				<option value="">JDEFAULT</option>
			</field>
		</fieldset>
	</fields>

</metadata>
