<?xml version="1.0" encoding="UTF-8"?>
<install version="1.0" type="plugin" group="payment">
	<name>os_offline</name>
	<title>Offline Payment</title>	
	<author>Tuan Pham Ngoc</author>
	<creationDate>09-03-2010</creationDate>
	<copyright>Copyright 2007-2010 Ossolution Team</copyright>
	<license>http://www.gnu.org/licenses/old-licenses/gpl-2.0.html GNU/GPL version 2</license>
	<authorEmail>contact@joomdonation.com</authorEmail>
	<authorUrl>www.joomdonation.com</authorUrl>
	<version>1.0</version>
	<description>Offline Payment Plugin For Events Booking Extension</description>
    <config>
        <fields name="params">
            <fieldset name="basic">
				<field name="icon" type="imagelist" directory="media/com_eventbooking/assets/images/paymentmethods" label="Icon" description="If you want to show icon instead of payment method title on registration form, upload it to media/com_eventbooking/assets/images/paymentmethods folder and select the icon here, for example os_offline.png" default="" />
                <field name="payment_fee_amount" type="text" label="Payment Processing Fee ($)" description="" />
                <field name="payment_fee_percent" type="text" label="Payment Processing Fee (%)" description="" />
				<field name="published" type="list" label="Registration Status">
					<option value="0">Pending</option>
					<option value="1">Paid</option>
				</field>
            </fieldset>
        </fields>
    </config>
	<files>
		<filename>os_offline.php</filename>				
	</files>	
	<installsql />
	<installfile />	
</install>