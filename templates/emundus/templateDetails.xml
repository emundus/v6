                </field>
                <field name="cbmoduleposition00ms" type="list" default="h_menu" label="CBModulePosition00 Menu Style">
                    <option value="h_menu">Horizontal</option>
                    <option value="v_menu">Vertical</option>
                </field>
                <field name="cbmoduleposition01ms" type="list" default="h_menu" label="CBModulePosition01 Menu Style">
                    <option value="h_menu">Horizontal</option>
                    <option value="v_menu">Vertical</option>
                </field>
                <field name="cbmoduleposition02ms" type="list" default="h_menu" label="CBModulePosition02 Menu Style">
                <option value="h_menu">Horizontal</option>
                <option value="v_menu">Vertical</option>
                </field>
                <field name="cbmoduleposition03ms" type="list" default="h_menu" label="CBModulePosition03 Menu Style">
                    <option value="h_menu">Horizontal</option>
                    <option value="v_menu">Vertical</option>
                </field>
                <field name="leftfooterareams" type="list" default="h_menu" label="LeftFooterArea Menu Style">
                    <option value="h_menu">Horizontal</option>
                    <option value="v_menu">Vertical</option>
                </field>
                <field name="centerfooterareams" type="list" default="h_menu" label="CenterFooterArea Menu Style">
                    <option value="h_menu">Horizontal</option>
                    <option value="v_menu">Vertical</option>
                </field>
                <field name="rightfooterareams" type="list" default="h_menu" label="RightFooterArea Menu Style">
                    <option value="h_menu">Horizontal</option>
                    <option value="v_menu">Vertical</option>
                </field>
            </fieldset>
        </fields>
    </config>
