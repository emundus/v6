<?xml version="1.0"?>

<extension version="1.7" type="template" method="upgrade">
    <name>emundus</name>
    <version>1.0</version>
    <creationDate>01/08/2020 00:00:00</creationDate>
    <author>eMundus</author>
    <authorUrl>https://www.emundus.fr</authorUrl>
    <copyright>Copyright 2020 emundus.fr. All Rights Reserved.</copyright>
    <license>GNU/GPL</license>
    <description />

    <files>
        <filename>index.php</filename>
        <filename>error.php</filename>
        <filename>template_thumbnail.png</filename>
        <filename>template_preview.png</filename>
        <filename>params.ini</filename>
        <filename>templateDetails.xml</filename>
        <filename>component.php</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>js</folder>
        <folder>images</folder>
        <folder>Fonts</folder>
        <folder>language</folder>
    </files>

    <positions>
        <position>header-a-saas</position>
        <position>header-onboarding</position>
        <position>header-switch</position>
        <position>header-c</position>
        <position>content-tutorial-a</position>
        <position>footer-a</position>
        <position>LeftFooterArea</position>
        <position>CenterFooterArea</position>
        <position>RightFooterArea</position>
    </positions>

    <params>
        <param name="show_effects" type="radio" default="1" label="Show mootools effects" description="Enable/Disable the use of rich javascript effect on the site">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="modules_start" type="list" default="open" label="Modules State" description="When effect enabled choose if the modules slides should start open or closed">
            <option value="open">Open</option>
            <option value="close">Close</option>
        </param>
    </params>

    <config>
        <fields name="params">
            <fieldset name="SideBar" label="Sidebar Options">
                <field name="sidebar_menu_font_size" type="text" default="14" label="Sidebar Menu Heading Font Size" description="Change Sidebar Menu Heading Font Size" />
                <field name="sidebar_menu_heading_tag" type="headertag" default="h3" label="Sidebar Menu Heading Tag" description="Change Sidebar Menu Heading Tag" />
                <field name="block_heading_font_size" type="text" default="14" label="Block Heading Font Size" description="Change Block Heading Font Size" />
                <field name="heading_tag_block" type="headertag" default="h3" label="Heading Tag for Block Heading" description="Change Heading Tag for Block Heading" />
            </fieldset>
            <fieldset name="style_options" label="Style Options">
                <field name="custom_css" type="textarea" default="" label="Custom Css" description="Add Custom Css" />
                <field name="enable_read_more_button" type="radio" class="btn-group btn-group-yesno" default="1" label="Display Read More Button" description="Show/Hide Read More Button">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="header-a-saas" type="list" default="block" label="header-a-saas Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="header-onboarding" type="list" default="block" label="header-onboarding Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="footer-a" type="list" default="block" label="footer-a Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="camoduleposition02" type="list" default="block" label="CAModulePosition02 Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="camoduleposition03" type="list" default="block" label="CAModulePosition03 Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="cbmoduleposition00" type="list" default="block" label="CBModulePosition00 Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="cbmoduleposition01" type="list" default="block" label="CBModulePosition01 Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="cbmoduleposition02" type="list" default="block" label="CBModulePosition02 Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="cbmoduleposition03" type="list" default="block" label="CBModulePosition03 Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="leftfooterarea" type="list" default="block" label="LeftFooterArea Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="centerfooterarea" type="list" default="block" label="CenterFooterArea Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="rightfooterarea" type="list" default="block" label="RightFooterArea Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
                <field name="debug" type="list" default="block" label="Debug Position Style">
                    <option value="block">TT Default</option>
                    <option value="none">None</option>
                </field>
            </fieldset>
            <fieldset name="menu_style_options" label="Menu Style Options">
                <field name="enable_click_on_menu" type="hidden" default="h_menu_hover" label="Enable menu">
                    <option value="h_menu_click">Click</option>
                    <option value="h_menu_hover">Hover</option>
                </field>
                <field name="enable_click_on_sidebar_menu" type="hidden" default="v_menu_hover" label="Enable  vertical menu">
                    <option value="v_menu_click">Click</option>
                    <option value="v_menu_hover">Hover</option>
                </field>
                <field name="header-ams" type="list" default="h_menu" label="header-a Menu Style">
                    <option value="h_menu">Horizontal</option>
                    <option value="v_menu">Vertical</option>
                </field>
                <field name="footer-ams" type="list" default="h_menu" label="footer-a Menu Style">
                    <option value="h_menu">Horizontal</option>
                    <option value="v_menu">Vertical</option>
                </field>
                <field name="camoduleposition02ms" type="list" default="h_menu" label="CAModulePosition02 Menu Style">
