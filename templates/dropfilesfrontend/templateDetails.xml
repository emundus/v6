<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN"
    "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site" method="upgrade">
    <name>Dropfiles frontend</name>
    <version>5.8.5</version>
    <creationDate>2021-10-11 02:44:17</creationDate>
    <author>JoomUnited</author>
    <authorEmail>contact@joomunited.com</authorEmail>
    <copyright>Copyright (C) 2005 - 2015 Open Source Matters, Inc. All rights reserved.</copyright>
    <description>TPL_DROPFILES_XML_DESCRIPTION</description>
    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>img</folder>
        <folder>language</folder>
    </files>
    <positions>
        <position>banner</position>
        <position>debug</position>
        <position>footer</position>
    </positions>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_dropfilesfrontend.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_dropfilesfrontend.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="templateColor" class="" type="color" default="#08C"
                       label="TPL_DROPFILES_COLOR_LABEL"
                       description="TPL_DROPFILES_COLOR_DESC"/>

                <field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
                       label="TPL_DROPFILES_BACKGROUND_COLOR_LABEL"
                       description="TPL_DROPFILES_BACKGROUND_COLOR_DESC"/>

                <field name="logoFile" class="" type="media" default=""
                       label="TPL_DROPFILES_LOGO_LABEL"
                       description="TPL_DROPFILES_LOGO_DESC"/>

                <field name="sitetitle" type="text" default=""
                       label="JGLOBAL_TITLE"
                       description="JFIELD_ALT_PAGE_TITLE_LABEL"
                       filter="string"/>

                <field name="sitedescription" type="text" default=""
                       label="JGLOBAL_DESCRIPTION"
                       description="JGLOBAL_SUBHEADING_DESC"
                       filter="string"/>

                <field name="googleFont"
                       type="radio"
                       class="btn-group btn-group-yesno"
                       default="1"
                       label="TPL_DROPFILES_FONT_LABEL"
                       description="TPL_DROPFILES_FONT_DESC"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="googleFontName" class="" type="text" default="Open+Sans"
                       label="TPL_DROPFILES_FONT_NAME_LABEL"
                       description="TPL_DROPFILES_FONT_NAME_DESC"/>

            </fieldset>
        </fields>
    </config>
</extension>
