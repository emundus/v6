<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0">
	<name>EmundusFlow</name>
    <author>Benjamin Rivalland</author>
    <creationDate>June 2015</creationDate>
    <copyright>Copyright (C) 2015 eMundus. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>benjamin@emundus.fr</authorEmail>
    <authorUrl>www.emundus.fr</authorUrl>
    <version>6.0</version>
	<description>Gives to the applicant an overview of his application.</description>
	<files>
		<filename module="mod_emundusflow">mod_emundusflow.php</filename>
		<filename module="mod_emundusflow">index.html</filename>
		<filename module="mod_emundusflow">tmpl/default.php</filename>
		<filename module="mod_emundusflow">tmpl/esiea.php</filename>
		<filename module="mod_emundusflow">tmpl/index.html</filename>
		<filename module="mod_emundusflow">style/index.html</filename>
		<filename module="mod_emundusflow">style/emundus.css</filename>
		<filename module="mod_emundusflow">style/images/index.html</filename>
		<filename module="mod_emundusflow">style/images/next.png</filename>
		<filename module="mod_emundusflow">style/images/ok.png</filename>
		<filename module="mod_emundusflow">style/images/no.png</filename>
		<folder>language</folder>
	</files>
	<languages folder="language">
		<language tag="fr-FR">fr-FR.mod_emundusflow.ini</language>
		<language tag="en-GB">en-GB.mod_emundusflow.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="show_programme"
					type="radio"
					default="1"
					label="MOD_EMUNDUSFLOW_SHOW_PROGRAMME_LABEL"
					description="MOD_EMUNDUSFLOW_SHOW_PROGRAMME_DESC">
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>
				<field
					name="show_deadline"
					type="radio"
					default="0"
					label="MOD_EMUNDUSFLOW_SHOW_DEADLINE_LABEL"
					description="MOD_EMUNDUSFLOW_SHOW_DEADLINE_DESC">
				<option
						value="1">JSHOW</option>
				<option
						value="0">JHIDE</option>
			</field>
				<field
						name="show_back_button"
						type="radio"
						default="1"
						label="MOD_EMUNDUSFLOW_SHOW_BACK_LABEL"
						description="MOD_EMUNDUSFLOW_SHOW_BACK_DESC">
					<option
							value="1">JSHOW</option>
					<option
							value="0">JHIDE</option>
				</field>
				<field
						name="show_form_step"
						type="radio"
						default="1"
						label="MOD_EMUNDUSFLOW_SHOW_FORM_STEP_LABEL"
						description="MOD_EMUNDUSFLOW_SHOW_FORM_STEP_DESC">
					<option
							value="1">JSHOW</option>
					<option
							value="0">JHIDE</option>
				</field>
				<field
					name="show_document_step"
					type="radio"
					default="1"
					label="MOD_EMUNDUSFLOW_SHOW_DOCUMENT_STEP_LABEL"
					description="MOD_EMUNDUSFLOW_SHOW_DOCUMENT_STEP_DESC">
				<option
						value="1">JSHOW</option>
				<option
						value="0">JHIDE</option>
			</field>
				<field
						name="show_status"
						type="radio"
						default="1"
						label="MOD_EMUNDUSFLOW_SHOW_STATUS_LABEL"
						description="MOD_EMUNDUSFLOW_SHOW_STATUS_DESC">
					<option
							value="1">JSHOW</option>
					<option
							value="0">JHIDE</option>
				</field>
				<field
						name="show_hikashop"
						type="radio"
						default="1"
						label="MOD_EMUNDUSFLOW_SHOW_HIKASHOP_LABEL"
						description="MOD_EMUNDUSFLOW_SHOW_HIKASHOP_DESC">
					<option
							value="1">JSHOW</option>
					<option
							value="0">JHIDE</option>
				</field>
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field name="admission" type="list" default="0" description="MOD_EMUNDUSFLOW_IS_ADMISSION_DESC" label="MOD_EMUNDUSFLOW_IS_ADMISSION" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field type="text" name="home_link" default="index.php" label="MOD_EMUNDUSFLOW_HOMELINK" description="MOD_EMUNDUSFLOW_HOMELINK_DESC"/>

				<field name="add_to_cart_icon" type="text" label="MOD_EMUNDUSFLOW_ALT_ADDTOCART_CLASS" description="MOD_EMUNDUSFLOW_ALT_ADDTOCART_CLASS_DESC"></field>
				<field name="scholarship_icon" type="text" label="MOD_EMUNDUSFLOW_ALT_SCHOLARSHIP_CLASS" description="MOD_EMUNDUSFLOW_ALT_SCHOLARSHIP_CLASS_DESC"></field>
			</fieldset>
		</fields>
	</config>
</extension>
