    <authorUrl>www.emundus.fr</authorUrl>
    <version>6.0</version>
	<description>MOD_EMUNDUS_PANEL_XML_DESC</description>
	<files>
		<filename module="mod_emunduspanel">mod_emunduspanel.php</filename>
		<filename module="mod_emunduspanel">mod_emunduspanel.xml</filename>
		<filename module="mod_emunduspanel">index.html</filename>
		<filename module="mod_emunduspanel">tmpl/default.php</filename>
		<filename module="mod_emunduspanel">elements/multilist.php</filename>
		<folder>language</folder>


	</files>

	<config>
		<fields name="params">
			<fieldset addfieldpath="/modules/mod_emunduspanel/elements" name="basic">
				<field name="panel_style" type="list" default="list" label="Panel Style" description="The panel style">
					<option value="default">Default</option>
					<option value="tchooz_dashboard">Tchooz Dashboard</option>
				</field>

				<!-- TCHOOZ LAYOUT PARAMETERS -->
				<field
						name="title"
						type="text"
						default=""
						label="MOD_EMUNDUSPANEL_TCHOOZ_TITLE_LABEL"
						description="MOD_EMUNDUSPANEL_TCHOOZ_TITLE_DESC"
						showon="panel_style:tchooz_dashboard"
						size="60">
				</field>
				<field
						name="desc_text"
						type="textarea"
						rows="4"
						columns="2"
						default=""
						label="MOD_EMUNDUSPANEL_TCHOOZ_DESC_LABEL"
						showon="panel_style:tchooz_dashboard"
						size="60">
				</field>
				<field
						name="profiles"
						type="sql"
						query="SELECT id, label FROM #__emundus_setup_profiles WHERE published = 0"
						multiple="true"
						default='["2","6"]'
						label="MOD_EMUNDUSPANEL_TCHOOZ_PROFILES_LABEL"
						showon="panel_style:tchooz_dashboard"
						key_field="id"
						value_field="label">
				</field>

				<!-- DEFAULT LAYOUT PARAMETERS -->
				<field
					name="show_title"
					type="text"
					default="My Forms"
					label="MOD_EMUNDUSPANEL_TITLE_LABEL"
					description="MOD_EMUNDUSPANEL_TITLE_DESC"
					showon="panel_style:default"
					size="60">
				</field>
				<field
					name="show_programme_title"
					type="radio"
					default="1"
					label="MOD_EMUNDUSPANEL_PROGRAMME_TITLE_LABEL"
					showon="panel_style:default"
					description="MOD_EMUNDUSPANEL_PROGRAMME_TITLE_DESC">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>
				<field
					name="show_profile_link"
					type="radio"
					default="0"
					label="MOD_EMUNDUSPANEL_LINK_LABEL"
					showon="panel_style:default"
					description="MOD_EMUNDUSPANEL_LINK_DESC">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>
				<field
					name="show_start_link"
					type="radio"
					default="0"
					label="MOD_EMUNDUSPANEL_START_LINK_LABEL"
					showon="panel_style:default"
					description="MOD_EMUNDUSPANEL_START_LINK_DESC">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>
				<field name="@spacer" type="spacer" default="&lt;b&gt;Folder to find pictures&lt;b&gt;" label="" description="" showon="panel_style:default" />
				<field name="folder" type="text" default="media/com_emundus/images/icones/" label="Enter the folder for all pictures" showon="panel_style:default" description="" size="60" />

				<field name="@spacer" type="spacer" default="&lt;b&gt;Guest home page&lt;b&gt;" label="" description="" showon="panel_style:default" />
				<field name="mainmenu" type="multilist" default="" label="Guest menu" showon="panel_style:default"/>
				<field name="mainmenu_img" type="textarea" default="" label="Enter some pictures names" showon="panel_style:default" description="Separated by comma (picture1.png, picture2.png, picture3.png ...)" rows="5" cols="25" />
				<field name="mainmenu_text" type="radio" default="0" label="Display menu text" showon="panel_style:default" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>

				<field name="@spacer" type="spacer" default="&lt;b&gt;System administrator&lt;b&gt;" label="" showon="panel_style:default" description="" />
				<field name="adminmenu" type="multilist" default="" label="adminmenu" showon="panel_style:default"/>
				<field name="adminmenu_img" type="textarea" default="" label="Enter some pictures names" showon="panel_style:default" description="Separated by comma (picture1.png, picture2.png, picture3.png ...)" rows="5" cols="25" />
				<field name="adminmenu_text" type="radio" default="1" label="Display menu text" showon="panel_style:default" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>

				<field name="@spacer" type="spacer" default="&lt;b&gt;Coordinator&lt;b&gt;" label="" description="" showon="panel_style:default" />
