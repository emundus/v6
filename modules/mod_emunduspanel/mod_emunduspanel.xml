				<field name="menu-profile9" type="multilist" default="" label="menu-profile9" showon="panel_style:default"/>
				<field name="menu-profile9_img" type="textarea" default="" label="Enter some pictures names" showon="panel_style:default" description="Separated by comma (picture1.png, picture2.png, picture3.png ...)" rows="5" cols="25" />
