				<field name="localcoordinator_menu" type="multilist" default="" label="localcoordinator_menu" showon="panel_style:default"/>
				<field name="localcoordinator_menu_img" type="textarea" default="" label="Enter some pictures names" showon="panel_style:default" description="Separated by comma (picture1.png, picture2.png, picture3.png ...)" rows="5" cols="25" />
				<field name="localcoordinator_menu_text" type="radio" default="1" label="Display menu text" showon="panel_style:default" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>

				<field name="@spacer" type="spacer" default="&lt;b&gt;Partner&lt;b&gt;" label="" showon="panel_style:default" description="" />
				<field name="partnermenu" type="multilist" default="" label="partnermenu" showon="panel_style:default"/>
				<field name="partnermenu_img" type="textarea" default="" label="Enter some pictures names" showon="panel_style:default" description="Separated by comma (picture1.png, picture2.png, picture3.png ...)" rows="5" cols="25" />
				<field name="partnermenu_text" type="radio" default="1" label="Display menu text" description="" showon="panel_style:default">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>

				<field name="@spacer" type="spacer" default="&lt;b&gt;Selected student&lt;b&gt;" label="" showon="panel_style:default" description="" />
				<field name="menu_profile8" type="multilist" default="" label="menu_profile8" showon="panel_style:default"/>
