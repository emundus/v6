                </field>

                <field name="@spacer" type="spacer" default="&lt;b&gt;Applicant profile 12&lt;b&gt;" showon="panel_style:default" label="" description="" />
				<field name="menu-profile12" type="multilist" default="" label="menu-profile12" showon="panel_style:default"/>
				<field name="menu-profile12_img" type="textarea" default="" label="Enter some pictures names" showon="panel_style:default" description="Separated by comma (picture1.png, picture2.png, picture3.png ...)" rows="5" cols="25" />
				<field name="menu-profile12_text" type="radio" default="1" label="Display menu text" showon="panel_style:default" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>

                <field name="@spacer" type="spacer" default="&lt;b&gt;Applicant profile 13&lt;b&gt;" label="" description="" showon="panel_style:default" />
				<field name="menu-profile13" type="multilist" default="" label="menu-profile13" showon="panel_style:default"/>
				<field name="menu-profile13_img" type="textarea" default="" label="Enter some pictures names" showon="panel_style:default" description="Separated by comma (picture1.png, picture2.png, picture3.png ...)" rows="5" cols="25" />
				<field name="menu-profile13_text" type="radio" default="1" label="Display menu text" showon="panel_style:default" description="">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
				<field name="showmenu" type="radio" default="true" label="MOD_EMUNDUSPANEL_SHOW_MENU_LABEL" showon="panel_style:default" description="MOD_EMUNDUSPANEL_SHOW_MENU_DESC">
					<option value="false">JNo</option>
					<option value="true">JYes</option>
				</field>
				<field name="leanmode" type="radio" default="false" label="MOD_EMUNDUSPANEL_LEAN_MODE_LABEL" showon="panel_style:default" description="MOD_EMUNDUSPANEL_LEAN_MODE_DESC">
					<option value="false">JNo</option>
					<option value="true">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
