<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<extension client="site" method="upgrade" type="module" version="3">
	<name>mod_fabrik_form</name>
	<author>Media A-Team, Inc.</author>
	<creationDate>June 2020</creationDate>
	<copyright>Copyright (C) 2005-2020 Media A-Team, Inc. - All rights reserved.</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>3.9.2</version>
	<description>MOD_FABRIK_FORM_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_fabrik_form">mod_fabrik_form.php</filename>
		<filename>mod_fabrik_form_boot.php</filename>
		<filename>index.html</filename>
		<filename>mod_fabrik_form.xml</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="advanced">
				<field name="moduleclass_sfx" type="text" description="MOD_FABRIK_FORM_CLASS_SUFFIX_DESC" label="MOD_FABRIK_FORM_CLASS_SUFFIX_LABEL"/>

				<field label="" name="@spacer" type="spacer"/>

				<field type="formlist" name="formid" default="0" description="MOD_FABRIK_FORM_FORM_DESC" label="MOD_FABRIK_FORM_FORM_LABEL"/>

				<field name="row_id" default="0" description="MOD_FABRIK_FORM_ROW_ID_DESC" label="MOD_FABRIK_FORM_ROW_ID_LABEL" size="4" type="text"/>

				<field name="usekey" type="text" default="" description="MOD_FABRIK_FORM_USEKEY_DESC" label="MOD_FABRIK_FORM_USEKEY_LABEL" size="15"/>

				<field name="template" type="fabriktemplate" view="form" default="" description="MOD_FABRIK_FORM_TEMPLATE_DESC" directory="/components/com_fabrik/views/form/tmpl" hide_default="0" hide_none="1" label="MOD_FABRIK_FORM_TEMPLATE_LABEL"/>

				<field name="formmodule_useajax" type="radio" class="btn-group" default="1" description="MOD_FABRIK_FORM_AJAX_DESC" label="MOD_FABRIK_FORM_AJAX_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="readonly" type="radio" class="btn-group" default="0" description="MOD_FABRIK_FORM_READONLY_DESC" label="MOD_FABRIK_FORM_READONLY_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
