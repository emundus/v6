<?xml version="1.0" encoding="utf-8"?>
<extension
		type="module"
		version="4.2.9"
		client="site"
		method="upgrade">
	<name>MOD_EMUNDUS_CHECKLIST_SYS_XML</name>
    <author>Benjamin Rivalland</author>
    <creationDate>April 2016</creationDate>
    <copyright>Copyright (C) 2016 eMundus. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>benjamin@emundus.fr</authorEmail>
    <authorUrl>www.emundus.fr</authorUrl>
    <version>2.0.0</version>
	<description>MOD_EMUNDUS_CHECKLIST_SYS_XML_DESC</description>
	<files>
		<filename module="mod_emundus_checklist">mod_emundus_checklist.php</filename>
		<filename>mod_emundus_checklist.xml</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>style</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_emundus_checklist.ini</language>
		<language tag="en-GB">en-GB.mod_emundus_checklist.sys.ini</language>
		<language tag="fr-FR">fr-FR.mod_emundus_checklist.ini</language>
		<language tag="fr-FR">fr-FR.mod_emundus_checklist.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="show_forms"
					type="radio"
					default="1"
					label="MOD_EMUNDUS_CHECKLIST_SHOW_FORMS"
					description="MOD_EMUNDUS_CHECKLIST_SHOW_FORMS_DESC">
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>
				<field type="text" size="60" name="forms_title" label="MOD_EMUNDUS_CHECKLIST_FORMS_TITLE" description="MOD_EMUNDUS_CHECKLIST_FORMS_TITLE_DESC" default="Formulaires"/>
				<field
					name="show_mandatory_documents"
					type="radio"
					default="1"
					label="MOD_EMUNDUS_CHECKLIST_SHOW_MANDATORY_DOCUMENTS"
					description="MOD_EMUNDUS_CHECKLIST_SHOW_MANDATORY_DOCUMENTS_DESC">
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>
				<field type="text" size="60" name="mandatory_documents_title" label="MOD_EMUNDUS_CHECKLIST_MANDATORY_DOCUMENTS_TITLE" description="MOD_EMUNDUS_CHECKLIST_MANDATORY_DOCUMENTS_TITLE_DESC" default="Documents obligatoires"/>
				<field
					name="show_optional_documents"
					type="radio"
					default="1"
					label="MOD_EMUNDUS_CHECKLIST_SHOW_OPTIONAL_DOCUMENTS"
					description="MOD_EMUNDUS_CHECKLIST_SHOW_OPTIONAL_DOCUMENTS_DESC">
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>
				<field type="text" size="60" name="optional_documents_title" label="MOD_EMUNDUS_CHECKLIST_OPTIONAL_DOCUMENTS_TITLE" description="MOD_EMUNDUS_CHECKLIST_OPTIONAL_DOCUMENTS_TITLE_DESC" default="Documents optionnels"/>
				<field
					name="show_duplicate_documents"
					type="radio"
					default="1"
					label="MOD_EMUNDUS_CHECKLIST_SHOW_DUPLICATE_DOCUMENTS"
					description="MOD_EMUNDUS_CHECKLIST_SHOW_DUPLICATE_DOCUMENTS_DESC">
					<option
						value="-1">JALL</option>
					<option
						value="1">JSHOW</option>
					<option
						value="0">JHIDE</option>
				</field>
				<field name="showsend" type="list" default="1" label="MOD_EMUNDUS_CHECKLIST_SHOW_SEND" description="MOD_EMUNDUS_CHECKLIST_SHOW_SEND_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="admission" type="list" default="0" description="MOD_EMUNDUS_CHECKLIST_IS_ADMISSION" label="MOD_EMUNDUS_CHECKLIST_IS_ADMISSION_DESC" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
